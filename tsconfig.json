      "module": "system",
      "moduleResolution": "node",
      "outDir": "js/build",
      "rootDir": "./ts",
      "noEmitOnError": true,
      "types": [
        "babylonjs",
        "babylonjs-gui"
      ]
    },
    "exclude": [
      "node_modules",
      ".npm"
    ],
    "include": [
          "ts/**/*.ts"
    ]
  }